@import 'lib';

#lightbox {
    background: rgba(0,0,0,.75);
    color: white;
    display: none;
    height: 100%;
    left: 0;
    opacity: 0;
    overflow: hidden;
    pointer-events: none;
    position: fixed;
    text-align: center;
    top: 0;
    width: 100%;
    z-index: 9000;
    -moz-transition: .5s opacity ease;
    -webkit-transition: .5s opacity ease;
    .close {
        background-position: center;
        color: transparent;
        display: block;
        height: 30px;
        margin: 0;
        overflow: hidden;
        position: absolute;
        right: 5px;
        top: 5px;
        width: 30px;
        z-index: 20;
    }
    &.show {
        opacity: 1;
        pointer-events: auto;
    }
    section {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        border-radius: 10px;
        right: 0;
        margin: auto;
        width: 100%;
        max-width: 700px;
        height: 100%;
        max-height: 700px;
        overflow: hidden;
        background: #f1f1f1;
    }
    .content {
        height: 100%;
        list-style: none;
        margin: 0;
        padding: 0;
        white-space: nowrap;
        width: 100%;
        li {
            display: inline-block;
            height: 100%;
            position: relative;
            width: 100%;
            .throbber {
                display: none;
            }
            &.loading {
                > * {
                    display: none;
                }
                > .throbber {
                    // spinner() has to be first here.
                    spinner('loading');
                    background-size: 33px auto;
                    display: block;
                    height: 33px;
                    left: 50%;
                    margin-left: -17px;
                    margin-top: -17px;
                    position: absolute;
                    top: 50%;
                    width: 33px;
                }
            }
        }
    }
    .caption {
        font-size: 18px;
        padding: 0 15px;
        position: absolute;
        bottom: 30px;
        left: 0;
        width: 100%;
        color: #000;
        white-space: normal;
    }
    img, video, .err {
        -moz-user-select: none;
        bottom: 0;
        display: block;
        left: 0;
        margin: auto;
        max-height: 95%;
        max-width: 95%;
        padding-bottom: 82px;
        position: absolute;
        right: 0;
        top: 0;
    }
    .err {
        font-size: 100px;
        max-height: 80px;
        line-height: 60px;
    }
}
